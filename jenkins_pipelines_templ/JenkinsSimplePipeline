pipeline {
    agent any

    stages {
        stage('Hello') {
            steps {
                echo 'Hello World'
                
                script {
                    sh '''
                        docker info
                        touch /tmp/my.txt
                        echo "Hello" > /tmp/my.txt
                        aws --version
                        aws s3 cp /tmp/my.txt s3://nextcloud-bucket/$BUILD_NUMBER.txt
                    '''
                }
                
            }
        }
    }
}
